@model ReviewModel
@{
    ViewData["Title"] = "Reviews";
}
    <h1>Courses for @Model.universityModel.universityName</h1>
    <table class="table-striped table-bordered w-auto">
        <thead>
            <tr>
                <th>Group</th>
                <th>Direction</th>
                <th>Program</th>
                <th>Presentation of content</th>
                <th>Clarity of expectations</th>
                <th>Clear feedback on performance</th>
                <th>Encouragment of participation/discussion</th>
                <th>Overall teaching effectiveness</th>
                <th>How satisfied were you with this course</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model.universityModel.GetCoursesWithRatings())
            {
            <tr>
                <td>@i["group"]</td>
                <td>@i["direction"]</td>
                <td>@i["program"]</td>
                <td>@i["presentation"]</td>
                <td>@i["clarity"]</td>
                <td>@i["feedback"]</td>
                <td>@i["encouragement"]</td>
                <td>@i["effectiveness"]</td>
                <td>@i["satisfaction"]</td>
                <td><a class="btn btn-primary" asp-controller="Review" asp-action="CourseReview" asp-route-id="@i["studyProgramId"]">Leave a review</a></td>
            </tr>
            }
        </tbody>
    </table>