@model UserModel
@{
    ViewData["Title"] = "Index";
}

    <form asp-controller="Settings" role="form" method="post" enctype="multipart/form-data" id="settingsForm">
        <div class="mb-2">
            <h2> Change Password:</h2>
        </div>

        <div class="row">
            <div class="col-lg-4">
                <label asp-for="CurrentPassword">Current password:</label>
                <input asp-for="CurrentPassword" type="password" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4">
                <label asp-for="NewPassword">New password:</label>
                <input asp-for="NewPassword" type="password" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4">
                <label asp-for="NewPassword2">Confirm new password:</label>
                <input asp-for="NewPassword2" type="password" class="form-control" />
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-lg-2">
                <button class="btn btn-primary" asp-controller="Settings" asp-action="ChangePassword">Change password</button>
            </div>
    </form>