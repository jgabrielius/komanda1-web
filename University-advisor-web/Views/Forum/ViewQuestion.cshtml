@model QuestionModel
@{
    ViewData["Title"] = "ViewQuestion";
}

    <form asp-controller="Forum" role="form" method="post" enctype="multipart/form-data">

        <div class="row">
            <div class="col-lg-4">
                <div class="card text-left" style="width:400px">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@Model.question</h5>
                            <h6 class="card-subtitle mb-2 text-muted">Asked by id: @Model.userId</h6>
                            <p class="card-text">@Model.message</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <label>Your answer</label>
                <textarea class="form-control" required="" pattern="[a-zA-Z0-9]+" style="height:200px"></textarea>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-lg-4">
                <input href="#" class="btn btn-primary" type="submit" value="Reply">
            </div>
        </div>

    </form>


