
@{
    ViewData["Title"] = "Index";
}
@model ForumModel

<form asp-controller="Forum" role="form" method="post" enctype="multipart/form-data" id="forumMainPage">

    <div class="row">
        <div class="mx-auto text-center">
            <div class="card text-center" style="width:400px">
                <div class="card-body">
                    <h4 class="card-title">For students, by students </h4>
                    <p class="card-text">
                        University advisor is a platform for anyone who seek higher education.
                        We help you get answers to toughest questions related to university choice.
                    </p>
                </div>
                <div style="height:50px">
                    <a asp-controller="Forum" asp-action="Question" class="btn btn-primary">Ask a question</a>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <table class="table table-striped table-bordered w-100">
            <thead>
                <tr>
                    <th style="width: 10%" data-toggle="tooltip" data-placement="top">Question id</th>
                    <th style="width: 25%" data-toggle="tooltip" data-placement="top">Question</th>
                    <th style="width: 35%" data-toggle="tooltip" data-placement="top">Message</th>
                    <th style="width: 15%" data-toggle="tooltip" data-placement="top">Asked by</th>
                    <th style="width: 15%"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.GetAllQuestions())
                {
                    var user = Model.GetUserById(i["userId"]);
                    <tr>
                        <td style="width: 10%">@i["questionId"]</td>
                        <td style="width: 25%">@i["question"]</td>
                        <td style="width: 35%">@i["message"]</td>
                        <td style="width: 15%">@user[0]["first_name"] @user[0]["last_name"], @user[0]["status"]</td>
                        <td style="width: 15%"><a class="btn btn-primary" asp-controller="Forum" asp-action="ViewQuestion" asp-route-id="@i["questionId"]">View question</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>

